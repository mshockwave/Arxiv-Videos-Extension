{
  "name": "Arxiv Videos",
  "manifest_version": 2,
  "version": "0.1",
  "description": "Show Arxiv videos on http://www.arxiv-sanity.com/",

  "content_scripts": [
    {
      "matches": ["http://*.arxiv-sanity.com/*"],
      "js": [
        "bower_components/waypoints/lib/noframework.waypoints.min.js",
        "bower_components/promise-polyfill/Promise.min.js",
        "bower_components/fetch/fetch.js",
        "youtube-api-rest.js",
        "keys.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],

  "permissions" : [
    "declarativeContent",
    "tabs"
  ],

  "web_accessible_resources": [
    "popup.html"
  ]
}
